<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_description"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/title"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/offlineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_btn3"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/onlineBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_btn2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/offlineBtn"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@id/onlineBtn"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/tempBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Direction"
        android:layout_marginTop="40dp"
        android:layout_below="@id/onlineBtn"
        android:layout_gravity="center_horizontal"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_above="@id/dbOperationsBtn"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/dbOperationsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DB Operations"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/testingBtn"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/testingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_btn1"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>
